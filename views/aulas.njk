{% extends "template.njk" %}
{% block head %}
  <title>Portf√≥lio | Rafael Brunner</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/aulas.css"/>
  <link rel="stylesheet" href="/modal.css"/>
  <link rel="stylesheet" href="/style.css"/>
{% endblock %}

{% block content %}
  <main>
    <div class="title">
      <h1>Projetos</h1>
    </div>
    <section class="cards__container">
      {% for item in items %}
        <div class="cards__bg" id="{{item.id}}">
          <header class="cards__header">
            <h2>Projetos 01 | Rafael Brunner</h2>
          </header>
          <div class="cards__image-container {{'featured-wrapper' if item.featured}}">
            <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de{{item.title}}"/>
            {% if item.featured %}
            <div class="featured">Featured</div>
            {% endif %}
          </div>
          <div class="cards__content">
            <p>{{item.title}}</p>
          </div>
          <button class="cards__button">Saiba Mais</button>
        </div>
      {% endfor %}

    </section>
    <div class="modal-overlay">
      <div class="modal">
        <a href="" class="close-modal">
          <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
          <iframe allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
        </div>
      </div>
    </div>
    <footer></footer>
  </main>
  <script src="/scripts.js"></script>
{% endblock %}